<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heleeos.blog.mapper.BlogTagMapper">
    <resultMap id="BaseResultMap" type="com.heleeos.blog.bean.BlogTag">
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="count" jdbcType="INTEGER" property="count" />
    </resultMap>
    
    <sql id="Base_Column_List"> name, count </sql>

    <insert id="insert" parameterType="com.heleeos.blog.bean.BlogTag">
        insert into t_blog_tag (name, count) values (#{name,jdbcType=VARCHAR}, #{count,jdbcType=INTEGER})
    </insert>
    
    <update id="update" parameterType="com.heleeos.blog.bean.BlogTag">
        update t_blog_tag set count = #{count,jdbcType=INTEGER} where name = #{name,jdbcType=VARCHAR}
    </update>
    
    <select id="gets" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" /> from t_blog_tag
    </select>
</mapper>